<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <EditText
            android:layout_width="270dp"
            android:layout_height="49dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/Password_Login_Field"
            app:layout_constraintStart_toStartOf="@+id/Email_Login_Field" app:layout_constraintEnd_toEndOf="@+id/Email_Login_Field"
            android:layout_marginTop="52dp" app:layout_constraintTop_toBottomOf="@+id/Email_Login_Field"
            app:layout_constraintHorizontal_bias="0.0" android:hint="Passoword"/>
    <EditText
            android:layout_width="270dp"
            android:layout_height="51dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/Email_Login_Field" android:layout_marginTop="176dp"
            app:layout_constraintTop_toTopOf="parent" android:hint="Email "
            app:layout_constraintEnd_toEndOf="@+id/textView3" app:layout_constraintStart_toStartOf="@+id/textView3"/>
    <Button
            android:text="Login"
            android:layout_width="167dp"
            android:layout_height="59dp"
            android:id="@+id/Login_Btn" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/Password_Login_Field" app:layout_constraintEnd_toEndOf="@+id/Password_Login_Field"
            app:layout_constraintStart_toStartOf="@+id/Password_Login_Field"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.471"/>
    <TextView
            android:text="Please enter your email and password"
            android:layout_width="212dp"
            android:layout_height="44dp"
            android:id="@+id/textView3" android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>