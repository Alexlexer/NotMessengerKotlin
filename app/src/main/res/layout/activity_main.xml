<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/UserNameFieldReg"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Username" android:layout_marginStart="20dp"
            android:layout_marginTop="152dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/PasswordFieldReg"
            android:hint="Password"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/EmailFieldReg"
            app:layout_constraintEnd_toEndOf="@+id/EmailFieldReg"
            app:layout_constraintStart_toStartOf="@+id/EmailFieldReg" app:layout_constraintHorizontal_bias="1.0"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/EmailFieldReg"
            app:layout_constraintStart_toStartOf="@+id/UserNameFieldReg"
            app:layout_constraintEnd_toEndOf="@+id/UserNameFieldReg" android:layout_marginEnd="8dp" android:hint="Email"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/UserNameFieldReg"/>
    <Button
            android:text="Register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/RegisterBtn"
            app:layout_constraintEnd_toEndOf="@+id/PasswordFieldReg"
            app:layout_constraintStart_toStartOf="@+id/PasswordFieldReg" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/PasswordFieldReg"/>
    <TextView
            android:text="Welcome to NOTMessenger"
            android:layout_width="280dp"
            android:layout_height="85dp"
            android:id="@+id/Title" android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent" android:textAlignment="center" android:textSize="24sp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Already have account? Login!!"
            android:layout_width="208dp"
            android:layout_height="24dp"
            android:id="@+id/Login" app:layout_constraintStart_toStartOf="@+id/RegisterBtn"
            app:layout_constraintEnd_toEndOf="@+id/RegisterBtn" app:layout_constraintHorizontal_bias="0.525"
            android:textColor="@android:color/black"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/RegisterBtn"/>
</android.support.constraint.ConstraintLayout>